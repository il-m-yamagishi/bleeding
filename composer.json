{
    "name": "il-m-yamagishi/bleeding",
    "description": "Bleeding Edge PHP 8 Framework",
    "keywords": ["php8", "framework"],
    "license": "Apache 2.0",
    "homepage": "https://github.com/il-m-yamagishi/bleeding",
    "support": {
        "issues": "https://github.com/il-m-yamagishi/bleeding/issues",
        "source": "https://github.com/il-m-yamagishi/bleeding"
    },
    "authors": [
        {
            "name": "Masaru Yamagishi",
            "email": "m-yamagishi@infiniteloop.co.jp",
            "homepage": "https://cafe-capy.net",
            "role": "Author"
        }
    ],
    "require": {
        "php": "~8.0-dev",
        "ext-json": "*",
        "cakephp/chronos": "^2.0",
        "laminas/laminas-diactoros": "^2.4",
        "monolog/monolog": "^2.1",
        "narrowspark/http-emitter": "^1.0",
        "php-di/php-di": "^7.0.0-beta2",
        "psr/container": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "relay/relay": "~2.0",
        "respect/validation": "^2.1",
        "riverline/multipart-parser": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.17"
    },
    "autoload": {
        "psr-4": {
            "Bleeding\\": "Bleeding/",
            "Edge\\": "Edge/"
        },
        "files": [
            "Bleeding/makeResolver.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "test": "phpunit",
        "psalm": "psalm"
    },
    "scripts-descriptions": {
        "phpcs": "PHP CodeSniffer for PSR-12",
        "phpcbf": "Autofix to PSR-12-valid",
        "test": "Runtime testing"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
